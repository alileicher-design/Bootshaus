    <script>
        // DATEN DER VOLLST√ÑNDIGEN KARTE
        const speiseDaten = [
            {
                kat: "Suppen",
                items: [
                    { n: "Maultaschensuppe", a: "(A,C,G,I)", p: "4,80" },
                    { n: "Currycremesuppe mit Garnele", a: "(G,B)", p: "5,50" },
                    { n: "Karotten Ingwer Kartoffelsuppe", a: "(G,I)", p: "4,80" }
                ]
            },
            {
                kat: "Salate",
                items: [
                    { n: "Fitne√üsalat mit Pute", a: "(J,I)", p: "12,00" },
                    { n: "Salat mit frittierten Maultaschen", a: "(I,J)", p: "10,20" },
                    { n: "Salat Italia", a: "(1,9,3,J,I,C,D)", p: "9,50" },
                    { n: "Beilagensalat klein", a: "(I,J)", p: "3,00" }
                ]
            },
            {
                kat: "Vom Schwein",
                items: [
                    { n: "Schnitzel mit Brot", a: "(C,A)", p: "8,50" },
                    { n: "Schnitzel + Beilage + Salat", a: "(I,J)", p: "12,50" },
                    { n: "Cordon Bleu + Beilage + Salat", a: "(A,C,I,J,G)", p: "15,00" },
                    { n: "J√§gerschnitzel + Beilage + Salat", a: "(A,I,J,G)", p: "13,50" }
                ]
            },
            {
                kat: "Burger Spezial",
                items: [
                    { n: "Bootshaus-Burger XL", a: "(3,I)", p: "8,00" },
                    { n: "Cheese-Burger XL", a: "(3,I)", p: "8,50" },
                    { n: "Garnelen - Burger", a: "(J,B,A)", p: "8,50" },
                    { n: "Crispy Chicken Burger", a: "(A,C,I,J)", p: "8,00" }
                ]
            },
            {
                kat: "Dessert",
                items: [
                    { n: "Hei√üe Liebe (Vanille/Himbeer)", a: "(C,G,6,13)", p: "4,90" },
                    { n: "Schoko Traum Soufflee", a: "(A,C,G)", p: "5,20" },
                    { n: "Gemischtes Eis mit Sahne", a: "(E,F,G,H)", p: "4,50" }
                ]
            }
        ];

        function init() {
            // Datum berechnen
            const heute = new Date();
            const tag = heute.getDay();
            const m = new Date(heute); m.setDate(heute.getDate() + (tag === 0 ? -6 : 1 - tag));
            const f = new Date(m); f.setDate(m.getDate() + 4);
            const opt = { day: '2-digit', month: '2-digit', year: 'numeric' };
            const datumString = `${m.toLocaleDateString('de-DE', opt)} - ${f.toLocaleDateString('de-DE', opt)}`;
            
            document.getElementById('wochen-datum-web').innerText = datumString;
            document.getElementById('wochen-datum-print').innerText = datumString;

            // Speisekarte bauen
            const grid = document.getElementById('speisekarte-grid');
            grid.innerHTML = speiseDaten.map(k => `
                <div>
                    <h3 class="text-gold font-serif text-xl border-b border-gold/20 pb-2 mb-6 italic">${k.kat}</h3>
                    ${k.items.map(i => `
                        <div class="mb-4">
                            <div class="flex justify-between font-bold uppercase text-[10px] tracking-wider">
                                <span>${i.n}<span class="allergen">${i.a}</span></span>
                                <span>${i.p} ‚Ç¨</span>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `).join('');
        }
        window.onload = init;
    </script>
